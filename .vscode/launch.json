{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "edge",
            "request": "launch",
            "name": "Launch Edge",
            "url": "${workspaceFolder}/client/index.html",
            "webRoot": "${workspaceFolder}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "服务器",
            "program": "${workspaceFolder}/server/js/main.js"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "客户端",
            "webRoot": "${workspaceFolder}",
            "file": "${workspaceFolder}/client/index.html",
            "runtimeArgs": [
				//解决文件跨域问题
                "--allow-file-access-from-files"
            ]
        }
    ]
}